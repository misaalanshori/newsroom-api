generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model News {
  id           Int        @id @default(autoincrement())
  title        String
  contents     String
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId Int
}

model Department {
  id   Int    @id @default(autoincrement())
  name String
  news News[]
}
